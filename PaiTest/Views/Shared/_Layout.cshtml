<!DOCTYPE html>
<html lang="en" ng-app="@ViewBag.InitModule">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/dist/css/app.min.css">
    <link rel="stylesheet" href="~/Content/Site.css">
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>
    <script src="~/Scripts/modernizer-min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAX13lsk1qLmdeFwpOCfb7XRH2yL5lXhUs"
            type="text/javascript"></script>
    <script src="~/Scripts/map.js" type="text/javascript"></script>
    <style>.ng-cloak {display: none !important;}</style>
</head>
    <body ng-app>
        <div ng-controller="TeamMemberListCtrl as vm">
            <!-- Begin Top Nav -->
            <nav class="navbar navbar-default navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li class="spacerFirst"></li>
                            <li>
                                <p class="navbar-btn">
                                    <button type="button" class="btn btn-default" aria-label="Left Align">
                                        <span class="fa fa-rss" aria-hidden="true"></span>&nbsp; Blog
                                    </button>
                                </p>
                            </li>
                            <li class="spacer"></li>
                            <li>
                                <p class="navbar-btn">
                                    <button type="button" class="btn btn-default" aria-label="Left Align">
                                        <span class="fa fa-briefcase" aria-hidden="true"></span>&nbsp; Jobs
                                    </button>
                                </p>
                            </li>
                            <li class="spacer"></li>
                            <li>
                                <p class="navbar-btn">
                                    <button type="button" class="btn btn-default" aria-label="Left Align">
                                        <span class="fa fa-bullhorn" aria-hidden="true"></span>&nbsp; Suport
                                    </button>
                                </p>
                            </li>
                            <li class="spacer"></li>
                            <li>
                                <p class="navbar-btn">
                                    <button type="button" class="btn btn-default" aria-label="Left Align" data-toggle="modal" data-target="#loginModal" ng-hide="vm.loggedOn">
                                        <span class="fa fa-user" aria-hidden="true"></span>&nbsp; Login
                                    </button>
                                    <button type="button" class="btn btn-default" aria-label="Left Align" ng-click="vm.logoff();" ng-show="vm.loggedOn">
                                        <span class="fa fa-user" aria-hidden="true"></span>&nbsp; Logoff
                                    </button>
                                </p>
                            </li>
                        </ul>

                        <div id="social-right">
                            <ul class="nav navbar-nav navbar-right">
                                <li class="divider-vertical"></li>
                                <li><a href="https://www.facebook.com/www.isama.com.sa"><i class="fa  fa-facebook-official facebookBlue"></i></a></li>
                                <li class="divider-vertical"></li>
                                <li><a href="https://twitter.com/ISAMA_SA"><i class="fa fa-twitter twitterBlue"></i></a></li>
                                <li class="divider-vertical"></li>
                                <li><a href="https://instagram.com/ISAMA_SA"><i class="fa fa-instagram instagramBlue"></i></a></li>
                                <li class="divider-vertical"></li>
                                <li><a href="https://plus.google.com/u/0/117384366852158612261/posts"><i class="fa fa-google-plus googleRed"></i></a></li>
                                <li class="divider-vertical"></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
            <!-- End Top Nav -->
            <!-- Start Header -->
            <div class="container header-margin">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="col-xs-9">
                            <img src="~/Content/images/logo-gray.png" />
                        </div>
                        <div class="col-xs-3 text-center">
                            <div class="contact-bar">
                                <ul class="list-inline">
                                    <li>
                                        <a class="contact-link" href="#" data-toggle="tooltip" data-placement="top" title="Phone us!">
                                            <i class="fa fa-phone contact-icon">&nbsp;</i>
                                        </a>
                                    </li>
                                    <li class="divider-vertical"></li>
                                    <li>
                                        <a class="contact-link" href="#" data-toggle="tooltip" data-placement="top" title="Saudia Arabia . Alreyadah">
                                            <i class="fa fa-map-marker contact-icon">&nbsp;</i>
                                        </a>
                                    </li>
                                    <li class="divider-vertical"></li>
                                    <li>
                                        <a class="contact-link" href="#" data-toggle="tooltip" data-placement="top" title="Mail us!">
                                            <i class="fa fa-envelope-o contact-icon">&nbsp;</i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Header -->
            <!-- Start Subnav -->
            <div class="row">
                <div class="subnav">
                    <div class="container">
                        <nav class="sub-nav">
                            <a class="sub-nav-item active" href="#/home">Home</a>
                            <a class="sub-nav-item" href="#/about">What about ISAMA</a>
                            <a class="sub-nav-item" href="#/what">What we do?</a>
                            <a class="sub-nav-item" href="#/projects">Our Projects</a>
                            <a class="sub-nav-item" href="#/team">Excellent Team</a>
                            <a class="sub-nav-item" href="#/contact">Contact</a>
                        </nav>
                    </div>
                </div>
            </div>
            <!-- End Subnav -->
            @RenderBody()
            <!-- Button trigger modal -->
            <footer>
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12">
                            <div id="social-foot">
                                <ul>
                                    <li><a class="facebookBlue" href="https://www.facebook.com/www.isama.com.sa"><i class="fa fa-facebook-official"></i></a></li>
                                    <li class="divider-vertical"></li>
                                    <li><a class="twitterBlue" href="https://twitter.com/ISAMA_SA"><i class="fa fa-twitter"></i></a></li>
                                    <li class="divider-vertical"></li>
                                    <li><a class="instagramBlue" href="https://instagram.com/ISAMA_SA"><i class="fa fa-instagram"></i></a></li>
                                    <li class="divider-vertical"></li>
                                    <li><a class="googleRed" href="https://plus.google.com/u/0/117384366852158612261/posts"><i class="fa fa-google-plus"></i></a></li>
                                </ul>
                            </div>
                        </div>

                        <div class="col-xs-6 text-left">
                            <i class="fa fa-copyright"></i> Copyright @DateTime.Now.Year - <a href="#">ISAMA</a> for information technology
                        </div>
                        <div class="col-xs-6 text-right">
                            <div id="foot-nav">
                                <ul>
                                    <li class="first"><a href="#">Blog</a></li>
                                    <li><a href="#">Jobs</a></li>
                                    <li><a href="#">Terms of Service</a></li>
                                    <li><a href="#">Privacy Policy</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
            <!-- Modal -->
            <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                        </div>
                        <div class="modal-body">
                            <form class="form-inline" name="loginForm" ng-submit="vm.login();">
                                <div class="form-group">
                                    <label class="sr-only">Email address</label>
                                    <input class="form-control"  type="text" ng-model="vm.UserName" placeholder="Username" >
                                </div>
                                <div class="form-group">
                                    <label class="sr-only">Password</label>
                                    <input type="password" class="form-control" ng-model="vm.TmPassword" placeholder="Password">
                                </div>
                                <button type="submit" class="btn btn-default">Sign in</button>
                            </form>
                            
                            <p ng-show="vm.loggedOn"> Welcome {{vm.loggedinUser}}</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <script src="~/Scripts/jquery-bundle.min.js"></script>
    <script src="~/Scripts/bootstrap-bundle.min.js"></script>
    <script src="~/Scripts/angular-bundle.min.js"></script>
    <script src="~/ng-js/app.js"></script>
    <script src="~/ng-js/common/common-services.js"></script>
    <script src="~/ng-js/common/teamMemberResource.js"></script>

    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();

            $(".sub-nav-item").click(function () {
                $(".sub-nav-item").removeClass("active");
                $(this).addClass("active");
            });
        });

        @RenderSection("scripts", required: false)
    </script>
</body>

</html>